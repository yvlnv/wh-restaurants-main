<main>
    <div><h1>Add new item</h1></div>
    <aricle>
        <form action="/edit/restaurants/{{restaurant.id}}/add_item/{{menu.id}}" method="POST">
            <label>Item name</label>
            <input name="name" type="text" placeholder="Item name" required/>
            <input name="MenuId" type="hidden" value="{{menu.id}}"/>
            <br>
            <label>Item price</label>
            <input name="price" placeholder="Item price" required/>
            <br>
            <button>Add item</button>
        </form>
    </aricle>
</main>
